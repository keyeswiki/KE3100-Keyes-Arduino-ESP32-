  <block type="ke_servo_r">
    <value name="PIN">
      <shadow type="pins_digital">
        <field name="PIN">26</field>
      </shadow>
    </value>
  </block>


  <!--          人体红外传感器               -->

  <block type="ke_ir_g">
    <value name="PIN">
      <shadow type="pins_digital">
        <field name="PIN">23</field>
      </shadow>
    </value>
  </block>


  <!--          按键传感器               -->
  <block type="ke_button">
    <value name="PIN">
      <shadow type="pins_digital">
        <field name="PIN">5</field>
      </shadow>
    </value>
  </block>
